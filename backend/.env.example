# Backend Environment Variables

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/autodocs_ai

# Anthropic API Key for Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key for Embeddings
# Used for generating code embeddings with text-embedding-3-small
# If not configured, falls back to placeholder embeddings (not semantically meaningful)
OPENAI_API_KEY=your_openai_api_key_here

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:3000/api/auth/callback/github

# Pinecone (Vector DB)
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX=autodocs-embeddings

# JWT Secret for authentication
JWT_SECRET=generate_a_random_secret_here

# Optional: Tree-sitter parser
TREE_SITTER_LANGUAGES=typescript,javascript,python,java,go,rust

# Error Tracking (optional - leave empty to disable)
SENTRY_DSN=

# Logging
LOG_LEVEL=info

# Redis (for BullMQ job queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=false

# Worker Configuration
WORKER_CONCURRENCY=3
